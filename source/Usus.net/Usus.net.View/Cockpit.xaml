<hub:HubAwareControl x:Class="andrena.Usus.net.View.Cockpit"
             xmlns:hub="clr-namespace:andrena.Usus.net.View.Hub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Background="{Binding StatusColor}" Foreground="White"/>
        <DataGrid Grid.Row="1" IsReadOnly="True" CanUserSortColumns="False"
                  HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray"
                  ItemsSource="{Binding Entries}"/>
    </Grid>
</hub:HubAwareControl>
