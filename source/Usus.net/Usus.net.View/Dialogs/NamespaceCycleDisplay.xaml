<Window x:Class="andrena.Usus.net.View.Dialogs.NamespaceCycleDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Header}" Height="500" Width="500" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="all namespaces in cycle"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="classes that reference classes in other namespaces"/>
        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding MainEntries}" BorderThickness="0" MouseDoubleClick="ListBox_MouseDoubleClick"/>
        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SubEntries}" BorderThickness="0"/>
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="Green" Margin="10"/>
    </Grid>
</Window>
